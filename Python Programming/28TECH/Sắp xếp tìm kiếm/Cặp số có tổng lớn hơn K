#Tìm phần tử đầu tiên hơn k - a[i]
def pos(a, l, r, x):
    res = -1
    while l <= r:
        m = (l + r) // 2
        if a[m] > x:
            res = m
            r = m - 1
        else:
            l = m + 1
    return res

n, k = map(int, input().split())
a = list(map(int, input().split()))
a.sort()
ans = 0
for i in range(n):
    #Tìm [i + 1, n - 1] > k - a[i]
    p1 = pos(a, i + 1, n - 1, k - a[i])
    if p1 != -1:
        ans += p1 - i
print(ans)
