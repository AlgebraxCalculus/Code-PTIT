#include <bits/stdc++.h>

using namespace std;

int main() {
    int n, k;
    cin >> n >> k;
    long long a[n];
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    sort(a, a + n);
    long long ans = 1;
    for (int i = 0; i < n; i++) {
        auto it = upper_bound(a + i + 1, a + n, a[i] + k);
        it--;
        ans = max(ans, (long long) (it - (a + i) + 1));
    }
    cout << ans;
    return 0;
}
