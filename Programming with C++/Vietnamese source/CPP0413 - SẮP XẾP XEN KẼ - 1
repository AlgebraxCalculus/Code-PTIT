#include <bits/stdc++.h>

using namespace std;

int main() {
	int t;
	cin >> t;
	while (t--) {
		int n;
		cin >> n;
		int a[n];
		for (int i = 0; i < n; i++) {
			cin >> a[i];
		}
		sort (a, a + n);
		int min_index = 0, max_index = n - 1;
		for (int i = 0; i < n; i++) {
			if (i % 2 == 0) {
				cout << a[max_index] << ' ';
				max_index--;
			} else {
				cout << a[min_index] << ' ';
				min_index++;
			}
		}
		cout << endl;
	}
	return 0;
}
