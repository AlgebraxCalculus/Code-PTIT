#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int a[n + 5][n + 5];
    for (int i = 0; i < n; i++) {
        int k = 1;
        for (int j = 0; j < n; j++) {
            if (j <= i) {
                printf("%d ", 0);
            } else {
                printf("%d ", k++);
            }
        }
        printf("\n");
    }
    return 0;
}
