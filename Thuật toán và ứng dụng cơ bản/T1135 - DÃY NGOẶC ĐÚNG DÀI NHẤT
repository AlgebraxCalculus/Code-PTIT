#include <bits/stdc++.h>
#define endl "\n"

using namespace std;

void solve () {
	string s;
	cin >> s;
	stack<int> st;
	for (int i = 0; i < s.size(); i++) {
		if (st.empty() || s[i] == '(') {
			st.push(i);
		} else if (s[i] == ')') {
			if (s[st.top()] != '(') {
				st.push(i);
			} else {
				st.pop();
			}
		}
	}
	if (st.empty()) {
		cout << s.size() << endl;
		return;
	}
	vector<int> v;
	while (!st.empty()) {
		v.push_back(st.top());
		st.pop();
	}
	if (v.front() != s.size() - 1) {
		v.push_back(s.size());
	}
	if (v.back() != 0) {
		v.push_back(-1);
	}
	sort(v.begin(), v.end());
	int res = 0;
	for (int i = 1; i < v.size(); i++) {
		res = max(res, v[i] - v[i - 1] - 1);
	}
	cout << res << endl;
}

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);
	int t;
	cin >> t;
	while (t--) {
		solve();
	}
	return 0;
}
