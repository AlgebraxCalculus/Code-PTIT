#include <bits/stdc++.h>

using namespace std;

void solve() {
	int k;
	string s;
	cin >> k >> s;
	int cnt[256] = {0};
	priority_queue<int> pq;
	for (char x : s) {
		cnt[x]++;
	}
	for (int i = 0; i < 256; i++) {
		if (cnt[i]) {
			pq.push(cnt[i]);
		}
	}
	if (k >= s.size()) {
		return;
	}
	while (k--) {
			int max_fre = pq.top();
			pq.pop();
			max_fre--;
			pq.push(max_fre);
	}
	long long ans = 0;
	while (!pq.empty()) {
	  long long x = pq.top();
		ans += x * x;
		pq.pop();
	}
	cout << ans << endl;
}

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--) {
		solve();
	}
	return 0;
}
