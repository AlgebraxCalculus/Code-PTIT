#include <bits/stdc++.h>

using namespace std;

int n, m, a[101][101];

void Floyd() {
	for (int k = 1; k <= n; k++) {
		for (int i = 1; i <= n; i++) {
			for (int j = 1; j <= n; j++) {
				a[i][j] = min(a[i][j], a[i][k] + a[k][j]); 
			}
		}
	}
}

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	cin >> n >> m;
	memset(a, 0, sizeof(a));
	for (int i = 1; i <= n; i++) {
		for (int j = 1; j <= n; j++) {
			if (i == j) {
				a[i][j] = 0;
			} else {
				a[i][j] = 1e9;
			}
		}
	}
	for (int i = 0; i < m; i++) {
		int x, y, w;
		cin >> x >> y >> w;
		a[x][y] = a[y][x] = w;
	}
	Floyd();
	int q;
	cin >> q;
	while (q--) {
		int u, v;
		cin >> u >> v;
		cout << a[u][v] << endl;
	}
	return 0;
}
