#include <bits/stdc++.h>

using namespace std;

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--) {
		int n;
		cin >> n;
		long long a[n];
		for (int i = 0; i < n; i++) {
			cin >> a[i];
		}
		long long dp[n];
		dp[0] = a[0];
		dp[1] = max(a[0], a[1]);
		for (int i = 2; i < n; i++) {
			dp[i] = max(dp[i - 1], a[i] + dp[i - 2]);
		}
		cout << dp[n - 1] << endl;
	}
	return 0;
}
