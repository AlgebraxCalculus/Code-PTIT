#include <bits/stdc++.h>

using namespace std;

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--) {
		int n, x, tmp;
		cin >> n >> x;
		int ok = 0;
		for (int i = 0; i < n; i++) {
			cin >> tmp;
			if (tmp == x) {
				ok = 1;
			}
		}
		if (ok == 1) {
			cout << 1 << endl;
		} else {
			cout << -1 << endl;
		}
	}
	return 0;
}
