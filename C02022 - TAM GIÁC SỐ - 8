#include <stdio.h>

int main() {
	int n;
	scanf("%d", &n);
	int giatri = 1;
	for (int i = 1; i <= n; i++) {
		if (i % 2 == 1) {
			for (int j = 1; j <= i; j++) {
				printf("%d ", giatri);
				giatri++;
			}
		} else {
			for (int j = giatri + i; j > giatri; j--) {
				printf("%d ", j - 1);
			}
			giatri += i;
		}
		printf("\n\n");
	}
	return 0;
} 
